<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/green_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
           <TextView
               android:id="@+id/textViewStatus"
               android:layout_marginStart="12dp"
               android:layout_marginTop="4dp"
               android:layout_marginBottom="4dp"
               android:layout_marginEnd="12dp"
               android:textColor="@color/green_400"
               android:fontFamily="@font/poppins_regular"
               android:textSize="@dimen/text_size_02"
               android:text="@string/reference"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textLeaveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:text="Meeting ID                  :"
            android:textColor="@color/dark_gray_700"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text_size_02"
            app:layout_constraintEnd_toStartOf="@+id/textViewID"
            app:layout_constraintStart_toStartOf="@+id/cardViewStatus"
            app:layout_constraintTop_toBottomOf="@+id/cardViewStatus" />

        <TextView
            android:id="@+id/textViewID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:gravity="center"
            android:textColor="@color/dark_gray_700"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text_size_02"
            app:layout_constraintBottom_toBottomOf="@+id/textLeaveTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textLeaveTitle"
            app:layout_constraintTop_toTopOf="@+id/textLeaveTitle" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Meeting Password     :"
            android:textColor="@color/dark_gray_700"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text_size_02"
            app:layout_constraintEnd_toEndOf="@+id/textLeaveTitle"
            app:layout_constraintStart_toStartOf="@+id/textLeaveTitle"
            app:layout_constraintTop_toBottomOf="@+id/textLeaveTitle" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:gravity="center"
            android:textColor="@color/dark_gray_700"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text_size_02"
            app:layout_constraintBottom_toBottomOf="@+id/textView34"
            app:layout_constraintEnd_toEndOf="@+id/textViewID"
            app:layout_constraintStart_toStartOf="@+id/textViewID"
            app:layout_constraintTop_toTopOf="@+id/textView34" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLive"
            style="@style/RoundedCornerButtonGreen400"
            android:layout_width="0dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/text_size_04"
            android:fontFamily="@font/poppins_bold"
            android:text="Join Live Class"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textViewPassword"
            app:layout_constraintStart_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/textView34" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>