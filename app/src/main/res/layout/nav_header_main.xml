<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_header_container"
    android:layout_width="match_parent"
    android:background="@color/gray_100"
    android:layout_height="@dimen/nav_header_height">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeImageView"
        android:layout_width="@dimen/progress_bar_icon"
        android:layout_height="@dimen/progress_bar_icon"
        android:layout_marginStart="@dimen/text_size_04"
        android:scaleType="centerInside"
        android:src="@drawable/round_account_button_with_user_inside"
        app:layout_constraintBottom_toBottomOf="@+id/textCompanyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textUserName"
        app:layout_constraintVertical_bias="1.0"
        app:shapeAppearance="@style/ShapeAppearance.ImageView" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_04"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_x_icon" />


    <TextView
        android:id="@+id/textUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Passdaily "
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_02"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/textCompanyName"
        app:layout_constraintEnd_toEndOf="@+id/imageViewClose"
        app:layout_constraintStart_toEndOf="@+id/shapeImageView" />


    <TextView
        android:id="@+id/textCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/school_name"
        android:textColor="@color/gray_400"
        android:textSize="@dimen/text_size_02"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textUserName"
        app:layout_constraintStart_toStartOf="@+id/textUserName" />

