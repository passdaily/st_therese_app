<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewBackground"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/icon_size"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageViewImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1.1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

<!--            android:layout_width="@dimen/progress_bar_icon"-->
<!--            android:layout_height="@dimen/progress_bar_icon_height"-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_marginBottom="@dimen/text_size_07"
                    android:layout_marginTop="@dimen/text_size_07"
                    android:layout_marginStart="@dimen/text_size_06"
                    android:layout_marginEnd="@dimen/text_size_06"
                    android:id="@+id/imageViewIcon"
                    android:layout_width="@dimen/spinner_custom_image"
                    android:layout_height="@dimen/spinner_custom_image"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bottom_mark_absent" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageViewImage"
            app:layout_constraintStart_toStartOf="@+id/imageViewImage"
            app:layout_constraintTop_toBottomOf="@+id/imageViewImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>


