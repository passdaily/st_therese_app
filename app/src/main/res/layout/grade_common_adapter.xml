<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/bg_line_border"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textGradeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_01"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/text_size_01"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="A1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_02"
        app:layout_constraintBottom_toTopOf="@+id/textGradeValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGradeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="12"
        android:textColor="@color/gray_700"
        android:textSize="@dimen/text_size_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textGradeName"
        app:layout_constraintStart_toStartOf="@+id/textGradeName"
        app:layout_constraintTop_toBottomOf="@+id/textGradeName" />
</androidx.constraintlayout.widget.ConstraintLayout>