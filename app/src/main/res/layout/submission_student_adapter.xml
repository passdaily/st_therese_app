<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/textStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_02"
        app:layout_constraintEnd_toStartOf="@+id/buttonReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSubmitDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="TextView"
        android:textColor="@color/gray_600"
        android:textSize="@dimen/text_size_02"
        app:layout_constraintEnd_toEndOf="@+id/textStudent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/textStudent"
        app:layout_constraintTop_toBottomOf="@+id/textStudent" />

    <TextView
        android:id="@+id/textTotalFiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="TextView"
        android:textColor="@color/gray_600"
        android:textSize="@dimen/text_size_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textSubmitDate"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/textSubmitDate"
        app:layout_constraintTop_toBottomOf="@+id/textSubmitDate"
        app:layout_constraintVertical_bias="0.018" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonReport"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/big_text_heading"
        android:text="Report"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textTotalFiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textStudent"
        app:layout_constraintTop_toTopOf="@+id/textStudent"
        style="@style/RoundedCornerButtonYellow200"/>
</androidx.constraintlayout.widget.ConstraintLayout>
